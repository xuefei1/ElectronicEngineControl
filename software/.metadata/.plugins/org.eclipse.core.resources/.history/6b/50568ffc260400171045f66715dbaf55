#ifndef PWM_GEN_H_
#define PWM_GEN_H_

#include "system.h"
#include "custom_types.h"

#define PWM_UPDATE_ALL			0

#define PWM_UPDATE_PERIOD		1

#define PWM_UPDATE_DUTY			2

#define PWM_PARAM_GET			0

#define PWM_PARAM_SET			1

void set_period(INT16U period_us);

void set_duty_cycle(INT8U percent);

INT16U get_period();

INT8U get_duty_cycle();

static void update_pwm_params(INT16U period_us, INT8U percent, INT8U flags);

static INT16U update_period(INT8U flag);

static INT8U update_duty_cycle(INT8U flag);

#endif /* PWM_GEN_H_ */
