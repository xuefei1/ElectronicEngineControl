#ifndef PWM_GEN_H_
#define PWM_GEN_H_

#include "system.h"
#include "custom_types.h"

#define PWM_UPDATE_ALL			0

#define PWM_UPDATE_PERIOD		1

#define PWM_UPDATE_DUTY			2

#define PWM_UPDATE_PULSE_WIDTH	4

void set_period(INT16U period_us);

void set_duty_cycle(INT8U percent);

BOOL set_pulse_width(INT16U width_us);

static void update_pwm_params(INT16U period_us, INT8U percent, INT16U width_us, INT8U flags);




#endif /* PWM_GEN_H_ */
